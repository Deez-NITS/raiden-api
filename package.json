{
  "name": "raiden-api-user",
  "version": "1.0.0",
  "main": "server.js",
  "repository": "git@github.com:Deez-NITS/raiden-api-user.git",
  "author": "Saurav Pal <resyfer.dev@gmail.com>",
  "license": "MIT",
  "type": "module",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "prepare": "husky install && yarn prisma:migrate:dev",
    "prisma:generate": "prisma generate",
    "prisma:format": "prisma format",
    "prisma:migrate:dev": "prisma migrate dev",
    "prisma:deploy": "prisma migrate deploy",
    "lint": "eslint . --fix",
    "pre-commit": "lint-staged"
  },
  "devDependencies": {
    "eslint": "^8.12.0",
    "husky": "^7.0.4",
    "lint-staged": "^12.3.7",
    "nodemon": "^2.0.15",
    "prettier": "^2.6.2",
    "prisma": "^3.12.0"
  },
  "dependencies": {
    "@prisma/client": "^3.12.0",
    "bcrypt": "^5.0.1",
    "cookie-parser": "^1.4.6",
    "cookie-session": "^2.0.0",
    "cors": "^2.8.5",
    "dotenv": "^16.0.0",
    "express": "^4.17.3",
    "helmet": "^5.0.2",
    "morgan": "^1.10.0",
    "nodemailer": "^6.7.3",
    "passport": "^0.5.2",
    "passport-local": "^1.0.0"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "yarn lint",
      "yarn prisma:format",
      "yarn prettier --write ."
    ],
    "*.{css,scss}": [
      "yarn prettier --write ."
    ]
  }
}
